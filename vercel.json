{
  "version": 2,
  "builds": [
    { "src": "public/**/*",     "use": "@vercel/static" },
    { "src": "api/**/*.js",     "use": "@vercel/node"   }
  ],
  "routes": [
    {
      "src":  "/create-checkout-session",
      "dest": "/api/create-checkout-session.js"
    },
    {
      "src":  "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
