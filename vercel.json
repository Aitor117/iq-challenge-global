{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // 1) Si piden "/", les devolvemos tu index.html
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    // 2) Para todo lo dem√°s, lo mapeamos bajo "public/"
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
