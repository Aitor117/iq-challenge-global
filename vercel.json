{
  "version": 3,
  "builds": [
    { "src": "api/**/*.js",    "use": "@vercel/node"    },
    { "src": "public/**/*",    "use": "@vercel/static"  }
  ],
  "routes": [
    { "src": "/create-checkout-session", 
      "dest": "/api/create-checkout-session.js" 
    },
    { "src": "/(.*)", 
      "dest": "/public/$1" 
    }
  ]
}
